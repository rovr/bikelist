- model_class = Bike
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @bike.name
%p
  %strong= model_class.human_attribute_name(:year) + ':'
  %br
  = @bike.year
%p
  %strong= model_class.human_attribute_name(:data) + ':'
  %br
  = @bike.data
%p
  %strong= model_class.human_attribute_name(:type_id) + ':'
  %br
  = @bike.type_id
%p
  %strong= model_class.human_attribute_name(:url) + ':'
  %br
  = @bike.url
%p
  %strong= model_class.human_attribute_name(:brand_id) + ':'
  %br
  = @bike.brand_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), bikes_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_bike_path(@bike), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), bike_path(@bike), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
